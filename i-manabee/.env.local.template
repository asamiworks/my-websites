# ========================================
# i-manabee 環境変数テンプレート
# このファイルをコピーして .env.local として使用してください
# ========================================

# 環境設定
NODE_ENV=development
PORT=3000

# Firebase設定（クライアント側 - NEXT_PUBLIC_で始まる）
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=i-manabee-prod.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=i-manabee-prod
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=i-manabee-prod.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK（サーバー側のみ）
FIREBASE_PROJECT_ID=i-manabee-prod
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@i-manabee-prod.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40i-manabee-prod.iam.gserviceaccount.com

# AI API Keys
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Stripe（Phase 2以降で使用）
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# セッション暗号化キー
SESSION_SECRET=your_super_secret_session_key_here_change_this_in_production

# メール設定（Phase 2以降で使用）
EMAIL_FROM=support@i-manabee.com
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# Redis設定（Phase 2以降で使用）
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# 監視・ログ設定
SENTRY_DSN=your_sentry_dsn_here

# API制限設定（デフォルト値）
API_RATE_LIMIT_PER_MINUTE=20
API_RATE_LIMIT_PER_HOUR=1000
API_COST_LIMIT_PER_DAY=3000
API_COST_LIMIT_PER_MONTH=30000

# セキュリティ設定
CORS_ORIGIN=http://localhost:3000,https://i-manabee.com
ALLOWED_IPS=127.0.0.1,::1

# デバッグ設定
DEBUG=false
LOG_LEVEL=info

# ========================================
# 設定手順：
# 1. このファイルを .env.local としてコピー
# 2. 各API キーを実際の値に置き換え
# 3. Firebase Console から設定値を取得
# 4. Stripe ダッシュボードから API キーを取得
# 5. 本番環境では NODE_ENV=production に変更
# ========================================