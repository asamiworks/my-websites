@tailwind base;
@tailwind components;
@tailwind utilities;

/* カスタムCSS変数 */
@layer base {
  :root {
    /* カラーパレット */
    --color-greige-50: #FAFAF9;
    --color-greige-100: #F5F5F3;
    --color-greige-200: #E8E6E1;
    --color-greige-300: #D4D0C9;
    --color-greige-400: #B8B2A7;
    --color-greige-500: #9B9284;
    --color-greige-600: #7E7668;
    --color-greige-700: #645D52;
    --color-greige-800: #4A453D;
    --color-greige-900: #312E29;
    
    --color-cream: #FBF8F3;
    --color-charcoal: #2C2C2C;
    
    /* フォント */
    --font-noto-sans: var(--font-noto-sans);
    --font-noto-serif: var(--font-noto-serif);
  }
}

/* スムーズスクロール */
@layer base {
  html {
    scroll-behavior: smooth;
  }
  
  body {
    @apply antialiased;
  }
}

/* カスタムコンポーネントスタイル */
@layer components {
  /* コンテナ */
  .container {
    @apply mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8;
  }
  
  /* セクション共通スタイル */
  .section {
    @apply py-16 md:py-24;
  }
  
  .section-padding {
    @apply py-16 md:py-24;
  }
  
  .section-title {
    @apply text-3xl md:text-4xl font-serif text-center text-greige-800 mb-4;
  }
  
  .section-subtitle {
    @apply text-lg text-center text-greige-600 mb-12;
  }
  
  /* 見出しスタイル */
  .heading-1 {
    @apply font-serif text-3xl font-medium text-greige-800 md:text-4xl lg:text-5xl;
  }
  
  .heading-2 {
    @apply font-serif text-2xl font-medium text-greige-800 md:text-3xl lg:text-4xl;
  }
  
  .heading-3 {
    @apply text-xl font-medium text-greige-700 md:text-2xl;
  }
  
  /* グラデーション背景 */
  .gradient-greige {
    @apply bg-gradient-to-br from-greige-50 to-greige-100;
  }
  
  /* カード共通スタイル */
  .card {
    @apply rounded-lg bg-white p-6 shadow-sm transition-all hover:shadow-md;
  }
  
  /* シャドウスタイル */
  .shadow-soft {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
  }
  
  /* ボタン共通スタイル */
  .btn {
    @apply inline-flex items-center justify-center rounded-full px-6 py-3 font-medium transition-all;
  }
  
  .btn-primary {
    @apply bg-greige-700 text-white hover:bg-greige-800;
  }
  
  .btn-secondary {
    @apply bg-greige-100 text-greige-700 hover:bg-greige-200;
  }
  
  .btn-line {
    @apply inline-flex items-center justify-center bg-[#06C755] text-white px-6 py-3 rounded-full font-medium transition-all hover:bg-[#05b34a] hover:shadow-lg;
  }
}

/* アニメーション */
@layer utilities {
  /* フェードイン */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  /* スライドイン */
  @keyframes slideInLeft {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  
  @keyframes slideInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  .animate-slide-in-left {
    animation: slideInLeft 0.5s ease-out;
  }
  
  .animate-slide-in-right {
    animation: slideInRight 0.5s ease-out;
  }
  
  .animate-slide-in-up {
    animation: slideInUp 0.5s ease-out;
  }
  
  /* パルス */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  @keyframes pulseSlow {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.9;
    }
  }
  
  .animate-pulse-slow {
    animation: pulseSlow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
}

/* スクロールバーカスタマイズ */
@layer utilities {
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-greige-50;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply rounded-full bg-greige-300;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    @apply bg-greige-400;
  }
}

/* 選択時の色 */
@layer base {
  ::selection {
    @apply bg-greige-200 text-greige-900;
  }
  
  ::-moz-selection {
    @apply bg-greige-200 text-greige-900;
  }
}

/* フォーカススタイル */
@layer base {
  *:focus-visible {
    @apply outline-2 outline-offset-2 outline-greige-500;
  }
}

/* モバイルメニューのトランジション */
@layer utilities {
  .mobile-menu-transition {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
}

/* LINE浮動ボタンのアニメーション */
@layer utilities {
  @keyframes bounce {
    0%, 100% {
      transform: translateY(-10%);
      animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
      transform: translateY(0);
      animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
  }
  
  .animate-bounce-slow {
    animation: bounce 2s infinite;
  }
}

/* 画像オーバーレイ効果 */
@layer utilities {
  .image-overlay {
    @apply relative overflow-hidden;
  }
  
  .image-overlay::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-t from-greige-900/50 to-transparent opacity-0 transition-opacity duration-300;
  }
  
  .image-overlay:hover::before {
    @apply opacity-100;
  }
}

/* テキストグラデーション */
@layer utilities {
  .text-gradient {
    @apply bg-gradient-to-r from-greige-600 to-greige-800 bg-clip-text text-transparent;
  }
}