{
  "name": "asami-works",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "serve": "firebase emulators:start --only functions,hosting",
    "deploy": "npm run deploy:all",
    "deploy:all": "npm run build && npm run copy-files && firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "npm run build && npm run copy-files && firebase deploy --only functions",
    "copy-files": "npm run copy:server && npm run copy:next && npm run copy:env",
    "copy:server": "cp server.js functions/",
    "copy:next": "cp -r .next functions/",
    "copy:env": "cp .env.local functions/.env.local 2>/dev/null || true"
  },
  "dependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.6",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.2",
    "googleapis": "^128.0.0",
    "lucide-react": "^0.542.0",
    "next": "^15.1.6",
    "nodemailer": "^6.9.8",
    "postcss": "^8.4.33",
    "puppeteer": "^24.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/node": "^20.19.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-google-recaptcha": "^2.1.8",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
